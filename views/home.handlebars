    <h1>
        <a href="/">
            < / anchor>
        </a>
    </h1>
    <nav>
        <!-- Unordered list element -->
        <ul>
            <!-- List item element-->
            <li>
                <!-- Anchor element -->
                <a href="/about">about</a>
            </li>
            <li>
                <a href="/login">sign in</a>
            </li>
        </ul>
    </nav>
</header>

<section class="hero">
    <div class="hero-cta">
        <h2>portfolio design made easy</h2>
        <p>
            Welcome! If you are new to the site Sinup using the form on this page.
            If you already have an account, use the sign in button in the navbar.
        </p>
    </div>
    <div class="hero-form">
        <h3>Get Started Today</h3>
        <p>Fill out this form to start your website!</p>
        <!-- Add form element -->
        {{!-- LOGIN POST, not to be confused with logging (GET) --}}
        {{!-- review the path and make proper adjustments (user-routs.js) --}}
        <form>
            <label for="username">enter a username:</label>
            <input type="text" placeholder="username" name="username" id="username" class="form-input" />
            <label for="email">enter your email</label>
            <input type="email" placeholder="email address" name="email" id="email" class="form-input" />
            <label for="password">create a password</label>
            <input type="password" placeholder="password" name="password" id="password" class="form-input" />
            <p>
                Have you designed your own website before?
                <span class="radio-wrapper">
                    <input type="radio" name="website-confirm" id="website-yes" />
                    <label for="website-yes">Yes</label>
                </span>
                <span class="radio-wrapper">
                    <input type="radio" name="website-confirm" id="website-no" />
                    <label for="website-no">No</label>
                </span>
            </p>
            <p>
                <span class="checkbox-wrapper">
                    <input type="checkbox" name="age-confirm" id="checkbox" />
                    <label for="checkbox">I acknowledge that I am at least 18 years of age.</label>
                </span>
            </p>
            <button type="submit" id="submit-button">Get Designing!</button>
        </form>
    </div>
</section>


<script src="/JS/signup.js"></script>