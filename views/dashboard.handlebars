<!-- hero/jumbotron -->
<section class="hero">
    <div class="hero-cta">
        <h2>hey there, </br> lets get crazy</h2>
        <p>
            To get started fill out the form to create a template.
        </p>
    </div>
    <div class="hero-form">
        <h1>Answer Some Questions To Begin</h1>
        </br>
        <!-- Add form element -->
        <form>
            <form class="box" method="post" action="" enctype="multipart/form-data">
                <div class="box__input">
                    <label for="file">Upload Profile Photo</label>
                    <input class="box__file" type="file" name="files[]" id="file"
                        data-multiple-caption="{count} files selected" multiple />

                </div>
                {{!-- <div class="box__uploading">Uploadingâ€¦</div>
                <div class="box__success">Done!</div>
                <div class="box__error">Error! <span></span>.</div> --}}
            </form>
            <label for="name">Name:</label>
            <input type="text" placeholder="" name="name" id="name" class="form-input" />
            <label for="email">Email:</label>
            <input type="email" placeholder="" name="email" id="email" class="form-input" />
            <label for="github">GitHub Link:</label>
            <input type="text" placeholder="" name="github" id="github" class="form-input" />
            <label for="linkedin">LinkedIn Link:</label>
            <input type="text" placeholder="" name="linkedin" id="linkedin" class="form-input" />
            <p>About you</p>
            <textarea rows="10" cols="69" id="about-me-text" class="about-me-text"></textarea>
            <br>
            <label for="template">Choose a template:</label>
            <select id="template">
                <option value="1">Simple 1</option>
                <option value="2">Featured 2</option>

            </select>


            </br>

            <button type="submit" id="submit-form">
                Next
            </button>
        </form>
    </div>
</section>







